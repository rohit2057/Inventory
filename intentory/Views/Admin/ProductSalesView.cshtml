@model IEnumerable<intentory.Models.ProductSales>

@{
    int a = 1;
}

<a asp-controller="Admin" asp-action="ProductSales" class="btn btn-primary">Purchase</a>
<table class="table table-stripped mt-2">
    <thead class="bg-black">
        <tr class="text-black">
            <th>ID</th>
            <th> Customer Name</th>
            <th> Product Name</th>
            <th>Measuring Unit</th>
            <th>Quantity</th>
            <th>Sales Price</th>
        </tr>
    </thead>
    <tbody>

        
    
      @foreach (var item in Model)
            {
        <tr>
                    <td>@a</td>
                    <td>@item.CustomerName</td>
                    <td>@item.ProductName</td>
                    <td>@item.MeasuringUnit</td>
                    <td>@item.Quantity</td>
                    <td>@item.SalesPrice</td>
            
          

             @{
              a++;
             }
        </tr>

            }

    </tbody>
 </table>


